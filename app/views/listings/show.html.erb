<%if @listing %>
	<div class="container" style=" background-color: #ddd;">
		<div class="row">
			<div class="col-md-2">
				<h4>Title:</h4>
			</div>
			<div class="col-md-4" style="top: 10px; bottom: 10px;">
				<p><%=@listing.title%></p>
			</div>
		</div>	
		<div class="row">
			<div class="col-md-2">
				<h4>Address:</h4>
			</div>
			<div class="col-md-4" style="top: 10px; bottom: 10px;">
				<%=@listing.address%>
			</div>				
		</div>
		<div class="row">
			<div class="col-md-2">
				<h4>Price:</h4>
			</div>
			<div class="col-md-4" style="top: 10px; bottom: 10px;">
				<%=@listing.price%>
			</div>				
		</div>
		<div class="row">
			<div class="col-md-2">
				<h4>Tag:</h4>
			</div>
			<div class="col-md-4" style="top: 10px; bottom: 10px;">
				<% @listing.tags.each do |tag|%>
					<%= tag.name + ',' %>
				<% end %>	
			</div>				
		</div>
		<div class="row">
			<div class="col-md-2">
				<h4>Country:</h4>
			</div>
			<div class="col-md-4" style="top: 10px; bottom: 10px;">
				<%=ISO3166::Country[@listing.country_code].name
				%>
			</div>				
		</div>
		<div class="row">
			<div class="col-md-2">
				<% if signed_in? and current_user.id == @listing.user_id %>
					<%= link_to "Edit", edit_listing_path(@listing) %>
					<%= link_to 'Destroy', @listing, method: :delete, data: { confirm: 'Are you sure?' } %>
				<% end %>
			</div>
		</div>	
		<div class="row">
			<div class="col-md-2">	
				<%= link_to 'Book this Place', new_listing_booking_path(@listing) %>
			</div>	
		</div>		
		<div class ="row">
			<div class="col-md-2">
				<%= link_to 'Back', listings_path %><br>
			</div>
		</div>
	</div>	
<%end%>
<br>
<br>
<div class="container">
	<div class="row">
		<%@listing.avatars.each do |avatar|%>
	  		<div class="col-sm-4">
	    		<div class="panel panel-primary">
	      			<div class="panel-body"><img src="<%=avatar%>" class="img-responsive" style="width:325px; height:200px;" alt="Image"></div>
	    		</div>
	  		</div>
	  	<%end%>
	</div>
</div>
