    <%= form_for_filterrific @filterrific do |f| %>
     	<div class="col-sm-3">
	         Search
	         <%= f.text_field(
	           :search_query,
	           class: 'filterrific-periodically-observed', class: "form-control" 
	         ) %>
      </div>
      <div class="col-sm-3">    
	         Country
	         <%= f.select(
	           :with_country_id,
	           @filterrific.select_options[:with_country_id],
	           { include_blank: '- Any -' }, class: "form-control"
	         ) %>
      </div>
      <div class="col-sm-3">     
         	Sorted by
         	<%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], 
             { include_blank: '- Any -' }, class: "form-control"            
          ) %>
      </div>
      <div class="col-sm-3">    
         	Tagged With:
         	<%= f.select(:with_tag_ids, @filterrific.select_options[:with_tag_ids],
            { include_blank: '- Any -'}, class: "form-control"
          ) %>
       	</div>
       	<div class="col-sm-12">
         <%= link_to(
           'Reset filters',
           reset_filterrific_url,
         ) %>
       </div>
       <%# add an automated spinner to your form when the list is refreshed %>
       <%= render_filterrific_spinner %>
     <% end %>
    <hr>